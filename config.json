{
    "name": "EfficinetNet-b7 for Mask",
    "n_gpu": 1,

    "arch": {
        "type": "EFNetB7",
        "args": {}
    },
    "data_loader": {
        "type": "DataLoaderForMask",    
        "args":{
            "data_dir": "../input/data",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 1,
            "trsfm": false,
            "submit": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "cross_entropy_loss",
        "args":{
            "class_weight": true
        }
    },
    "metrics": [
        "accuracy", "top_k_acc", "f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 25,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
